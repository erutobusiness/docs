{
  "name": "docs",
  "version": "1.0.0",
  "description": "ドキュメントプロジェクト",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:text": "textlint --config .textlintrc.js \"*.md\" \"src/**/*.md\" \"md/*.md\" \"md/trpg/**/*.md\" && textlint --config md/baby-cup/.textlintrc.js \"md/baby-cup/*.md\" \"md/baby-cup/10_flow/**/*.md\" \"md/baby-cup/20_topics/**/*.md\" && textlint --config md/baby-cup/30_marp/.textlintrc.js \"md/baby-cup/30_marp/**/*.md\" && textlint --config md/claude-vs-antigravity/.textlintrc.js \"md/claude-vs-antigravity/**/*.md\" && textlint --config md/declarative/.textlintrc.js \"md/declarative/**/*.md\" && textlint --config md/theArtOfLoving/.textlintrc.js \"md/theArtOfLoving/**/*.md\"",
    "lint:fix": "biome check --apply .",
    "check": "npm run lint && npm run lint:text && npx tsc --noEmit",
    "fix": "npm run lint:fix && npm run format",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "md/baby-cup/30_marp/**/*.md": ["textlint --config md/baby-cup/30_marp/.textlintrc.js"],
    "md/baby-cup/{*.md,10_flow/**/*.md,20_topics/**/*.md}": [
      "textlint --config md/baby-cup/.textlintrc.js"
    ],
    "md/claude-vs-antigravity/**/*.md": [
      "textlint --config md/claude-vs-antigravity/.textlintrc.js"
    ],
    "md/declarative/**/*.md": ["textlint --config md/declarative/.textlintrc.js"],
    "md/theArtOfLoving/**/*.md": ["textlint --config md/theArtOfLoving/.textlintrc.js"],
    "md/trpg/**/*.md": ["textlint --config .textlintrc.js"],
    "{*.md,src/**/*.md,md/*.md}": ["textlint --config .textlintrc.js"]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "framer-motion": "^12.9.4",
    "gray-matter": "^4.0.3",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^4",
    "textlint": "^15.5.0",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-filter-rule-footnote": "^1.0.2",
    "textlint-filter-rule-node-types": "^1.1.0",
    "textlint-rule-footnote-dearu-desumasu": "^1.0.0",
    "textlint-rule-one-sentence-per-line": "^2.0.0",
    "textlint-rule-period-in-list-item": "^1.0.1",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "typescript": "^5"
  }
}
