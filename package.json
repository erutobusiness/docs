{
  "name": "docs",
  "version": "1.0.0",
  "description": "ドキュメントプロジェクト",
  "private": true,
  "scripts": {
    "format": "npm run format:prettier && npm run format:remark",
    "format:prettier": "prettier --write .",
    "format:remark": "remark . --output --frail",
    "lint:format": "prettier --check . && remark . --frail",
    "lint": "npm run lint:format && node scripts/run-textlint.js",
    "lint:fix": "npm run format",
    "check": "npm run lint",
    "fix": "npm run lint:fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "remark-disable-text-escape": "^1.3.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-validate-links": "^13.1.0",
    "remark-wiki-link": "^2.0.1",
    "textlint": "^15.5.0",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-filter-rule-footnote": "^1.0.2",
    "textlint-filter-rule-node-types": "^1.1.0",
    "textlint-rule-footnote-dearu-desumasu": "^1.0.0",
    "textlint-rule-one-sentence-per-line": "^2.0.0",
    "textlint-rule-period-in-list-item": "^1.0.1",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-terminology": "^5.2.16",
    "typescript": "^5"
  }
}
